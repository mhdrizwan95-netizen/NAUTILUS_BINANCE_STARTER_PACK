{
  "dashboard": {
    "id": null,
    "title": "HMM Trader Dashboard",
    "tags": ["hmm", "trading", "prometheus"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Current Active State",
        "type": "singlestat",
        "targets": [
          {
            "expr": "max(state_active)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "PnL Realized",
        "type": "graph",
        "targets": [
          {
            "expr": "sum without (pid) (pnl_realized_total{job=~\"engine_.*\"})",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "PnL Unrealized",
        "type": "graph",
        "targets": [
          {
            "expr": "sum without (pid) (pnl_unrealized_total{job=~\"engine_.*\"})",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Drift Score (KLD)",
        "type": "graph",
        "targets": [
          {
            "expr": "drift_score",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Guardrail Trigger Rate (per 5m)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(guardrail_trigger_total[5m])) by (reason)",
            "refId": "A",
            "legendFormat": "{{reason}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "State Activity Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "state_active",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Cash Baseline Check",
        "type": "singlestat",
        "targets": [
          {
            "expr": "sum without (pid) (equity_usd{job=~\"engine_.*\"}) - (sum without (pid) (pnl_realized_total{job=~\"engine_.*\"}) + sum without (pid) (pnl_unrealized_total{job=~\"engine_.*\"}))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          }
      },
      {
        "id": 8,
        "title": "Orders Rejected Rate (5m)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum without (pid) (rate(orders_rejected_total{job=~\"engine_.*\"}[5m]))",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 42 }
      },
      {
        "id": 9,
        "title": "Breaker Rejections (24h)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum without (pid) (increase(breaker_rejections_total{job=~\"engine_.*\"}[24h]))",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 42 }
      },
      {
        "id": 10,
        "title": "Breaker State (1=open)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "max by (instance) (breaker_state{job=~\"engine_.*\"})",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": { "h": 6, "w": 12, "x": 0, "y": 50 }
      },
      {
        "id": 11,
        "title": "Venue Error Rate (%)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "max by (instance) (venue_error_rate_pct{job=~\"engine_.*\"})",
            "refId": "A",
            "legendFormat": "{{instance}}"
          }
        ],
        "gridPos": { "h": 6, "w": 12, "x": 12, "y": 50 }
      }
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 36
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 0,
    "templating": {
      "list": []
    }
  }
}
